package exercicioFactoryMethod;

abstract class Carro {
	private int potencia;
	private String cor;
	
	public Carro(int potencia, String cor) {
		this.potencia = potencia;
		this.cor = cor;
	}
	
	public void carroIniciado() {
		System.out.println(getClass().getSimpleName());
	}
	
    public void limpo(){
	   System.out.println("Carro completamente limpo e com a cor " + cor.toLowerCase());
	}
    
    public void txtPotencia() {
    	System.out.println("Este carro tem a potencia em cavalos de " + potencia + " Cv");
    }

}
